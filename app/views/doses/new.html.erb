<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3 ">
      <h1>Create a dose</h1>
      <%= simple_form_for [@cocktail, @dose] do |f| %>
      <%= f.input :description %>
      <%= f.input :ingredient_id, collection: Ingredient.all %>
      <%= f.submit "Add a dose", class: "btn btn-primary" %> <% end %>
    </div>
  </div>
</div>



