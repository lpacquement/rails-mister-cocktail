<div class="container">
  <div class="row">
    <div class="col-xs-6 col-sm-4 col-sm-offset-2">
      <h1><%= @cocktail.name %></h1>
      <% @cocktail.doses.each do |dose| %>
        <div>
          <%= dose.description %> <%= dose.ingredient.name %>
         <%= link_to "&times;".html_safe, dose_path(dose), method: :delete %>
        </div>
      <% end %>
      <%= link_to "Add an ingredient to this cocktail", new_cocktail_dose_path(@cocktail) %>
      | <%= link_to 'Back', cocktails_path %>
    </div>

    <div class="col-xs-6 col-sm-4 col-sm-offset-2 ">
      <div>
        <% if @cocktail.photo? %>
          <%= cl_image_tag @cocktail.photo.path, width: 200, height: 300, crop: :fill, radius: 3 %>
        <% end %>
      </div>
    </div>
  </div>
</div>

