<div class="container ">
  <div class="row">
    <h1 class="text-center">List of Cocktails</h1>
    <p class="text-center"><%= link_to "Create a new cocktail", new_cocktail_path, class: "btn btn-primary"%></p>
    <div class="col-xs-12 col-sm-6 col-sm-offset-3">
      <% @cocktails.each do |cocktail| %>
        <h2><%= link_to cocktail.name, cocktail_path(cocktail) %></h2>
      <% end %>
    </div>
  </div>
</div>
